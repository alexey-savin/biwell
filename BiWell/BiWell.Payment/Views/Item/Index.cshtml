@model IEnumerable<BiWell.Payment.ItemWeight>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/error-styles.css" rel="stylesheet" />
    <title>Весовые характеристики</title>
</head>
<body>
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Весовые характеристики товаров</h3>
            </div>
            <div class="panel-body">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-default" })
                        @Html.ActionLink("Выгрузить", "ExportExcel", null, new { @class = "btn btn-default" })
                    </div>
                </div>

                <table class="table table-striped table-condensed table-bordered">
                    <tr>
                        <th class="text-center">Код товара</th>
                        <th class="text-center">Наименование</th>
                        <th class="text-center">Вес (кг)</th>
                        <th class="text-center">Внутренняя цена</th>
                        <th class="text-center">Действия</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-left">@item.ItemId</td>
                            <td class="text-left">@item.Name</td>
                            <td class="text-right">@item.Weight</td>
                            <td class="text-right">@item.InternalPrice</td>
                            <td class="text-right">
                                @Html.ActionLink("Правка", "Edit", new { id = item.ItemId }) |
                                @Html.ActionLink("Детали", "Details", new { id = item.ItemId }) |
                                @Html.ActionLink("Удалить", "Delete", new { id = item.ItemId })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
